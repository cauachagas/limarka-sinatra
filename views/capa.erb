    <label for="title">Ano de apresentação</label>
    <input id="number" placeholder="2019" name="date" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label for="local">Local</label>
    <input id="local" placeholder="Cidade - UF" name="local" type="text" class="form-control">
  </div>


  <p></p>
  <button type='submit' class='btn btn-primary btn-lg'>Enviar</button>
  <p></p>
  
